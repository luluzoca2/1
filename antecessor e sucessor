#include <stdio.h>
#include <locale.h>

int main() {
    // Defina a localização para usar caracteres acentuados (pode variar dependendo do sistema)
    setlocale(LC_ALL, "Portuguese");
int numero;

    printf ("Digite um número para saber seu antecessor e sucessor: \n");
    scanf("%d", &numero);
  
    int sucessor = numero +1;
    int antecessor = numero -1;
    
    printf("O antecessor de: %d é: %d e o sucessor é: %d \n", numero, antecessor, sucessor);
    
    return 0;
    
}
